/**app.wxss**/
page{background-color:#fbf7f4;display: block;}
.theme-color{color:#b1695a;}
.gray-color{color:#999999;}
.button-area{margin:15px;}
button{box-shadow: 0px 2px 6px 0px rgba(219, 152, 100, 0.6);
}
button:after{display:none;}
button:active,.hover-class{box-shadow: 0px 1px 2px 0px rgba(219, 152, 100, 0.3);}
button[type="default"]{color:#b1695a;}
button[type="primary"]{background-color:#db9864;}
button[type="primary"]:active,.hover-class{background-color:#cb8956;}

.wx-checkbox-input{transition: all 0.2s;}
.wx-checkbox-input:active{transform: scale(1.2);}
.wx-checkbox-input.wx-checkbox-input-checked{border-color:#00aa92;background-color:#00aa92;border-radius:100%;}
.wx-checkbox-input.wx-checkbox-input-checked:before{color:#FFF;}
.flex-item{display: flex;}
.flex-item__item{flex: 1;}


.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:660rpx;
  overflow: hidden;
  position: fixed;
  top:50%;
  left:50%;
  z-index: 9999;
  background: #FFF;  
  transform: translate(-50%,-50%);
  border-radius:24rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 96rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 96rpx;
}

.btn-cancel {
  flex:1;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  flex:1;
  color:#b0695a;
  text-align: center;

}