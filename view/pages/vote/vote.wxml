<!--pages/vote/vote.wxml-->
<!-- start title  -->
<view class='title'>
  <view class='title-content'>
    <text class='title-txt'>老同学相约九八</text>
  </view>
  <view class='host-info'>
    <image src='/images/avatar3.jpg' class='host-avatar'></image>
    <text class='host-name'>陈海军</text>
    <text class='end-time'>12月18日结束</text>
    <text class='host-info-status'>投票中</text>
  </view>
</view>
<!-- end title  -->
<!-- start 信息概览 -->
<view class='base-info'>
  <view class='item-flex'>
    <view class='item-flex__item' bindtap='showYaoQingModal'>
      <text class='big-number'>17</text>
      <view>邀请人数</view>
    </view>
    <view class='item-flex__item' bindtap="showYiTouModal">
      <text class='big-number'>16</text>
      <view>未投人数</view>
    </view>
    <view class='item-flex__item' bindtap='showMeiKongModal'>
      <text class='big-number'>1</text>
      <view>没空参会</view>
    </view>
  </view>
</view>
<!-- end 信息概览 -->
<!-- start item  -->
