<!-- end item  -->
<view class='button-area'>
  <view class="item-flex item-flex__btn-group">
    <view class='item-flex__item'>
      <button type="warn" size="default" bindtap='bindNoTap' hover-class="hover-class"> 没空参加 </button>
    </view>
    <view class='item-flex__item'>
      <button type="primary" size="default" bindtap='bindYesTap' hover-class="hover-class"> 有空参加 </button>
    </view>
  </view>
</view>


